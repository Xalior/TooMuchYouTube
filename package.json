{
  "name": "com.xalior.chrome.toomuchyoutube",
  "version": "0.3.3",
  "private": true,
  "description": "Build tools for the TooMuchYouTube extension.",
  "scripts": {
    "build": "node bin/build-release.js",
    "build:extension": "npm run build:extension:debug",
    "build:extension:debug": "npm run domains:apply && npm run typecheck:extension && node bin/build-extension.js debug",
    "build:extension:prod": "npm run domains:apply && npm run typecheck:extension && node bin/build-extension.js prod",
    "typecheck:extension": "tsc -p extension/tsconfig.json --noEmit",
    "domains:fetch": "node bin/update-youtube-domains.js --fetch",
    "domains:apply": "node bin/update-youtube-domains.js",
    "domains:check": "node bin/update-youtube-domains.js --check",
    "domains:check:json": "node bin/update-youtube-domains.js --check --json",
    "bump": "node bin/bump-version.js"
  },
  "config": {
    "releaseNamespace": "com.xalior.chrome.toomuchyoutube",
    "releaseDir": "releases",
    "sourceDir": "extension",
    "releaseInclude": [
      "manifest.json",
      "popup.html",
      "popup.css",
      "dist",
      "icons"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.280",
    "archiver": "^6.0.2",
    "esbuild": "^0.24.2",
    "typescript": "^5.5.4"
  }
}
